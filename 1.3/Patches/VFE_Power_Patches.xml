<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Power</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

		<!--========== HELIXIEN PATCHES ==========-->
				
<!-- Biomes with extra geysers generation -->
				
	<li Class="PatchOperationReplace">
          <xpath>/Defs/VanillaPowerExpanded.SpecialPowerSpawnsDef[defName="VPE_SpawnHelixienVents"]/biomesWithExtraGeneration</xpath>
            <value>
		<biomesWithExtraGeneration>
			<li>Tundra</li>
			<li>IceSheet</li>
			<li>ColdBog</li>
			<li>BorealForest</li>
		</biomesWithExtraGeneration>
            </value>
        </li>
				
<!-- Number of extra geyser -->
				
	<li Class="PatchOperationAdd">
          <xpath>/Defs/VanillaPowerExpanded.SpecialPowerSpawnsDef[defName="VPE_SpawnHelixienVents"]</xpath>
            <value>
		<extraGeneration>2</extraGeneration>
            </value>
        </li>

<!-- Increase in helixien pump extraction -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="VPE_HelixienPump"]/comps/li[Class=GasNetwork.CompProperties_GasTrader"]</xpath>
            <value>
		<li Class="GasNetwork.CompProperties_GasTrader">
		  <compClass>GasNetwork.CompGasTrader</compClass>
		  <gasConsumption>-500</gasConsumption>
		</li>
            </value>
        </li>
			
      </operations>
    </match>
  </Operation>
</Patch>
