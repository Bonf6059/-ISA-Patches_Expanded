<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!--========== TRADERS ==========-->

<Operation Class="PatchOperationSequence">
 <!-- <success>Always</success>  -->
    <operations>
      <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->
      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
        <value>
          <li>ISA_Caravan_Minerals</li>
        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name="TribeBase"]/caravanTraderKinds</xpath>
        <value>
          <li>ISA_Caravan_Minerals</li>
        </value>
      </li>	

  </operations>
</Operation>

<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/FactionDef[defName="Empire"]/caravanTraderKinds</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/FactionDef[defName="Empire"]</xpath>
						<value>
							<caravanTraderKinds />
						</value>
					</nomatch>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="Empire"]/caravanTraderKinds</xpath>
					<value>
						<li>ISA_Caravan_Minerals</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
