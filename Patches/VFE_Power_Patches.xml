<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Power</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

<!--================================================================================================================-->
			
	<li Class="PatchOperationReplace">
          <xpath>Defs/SpecialSpawnsDefs[defName="VPE_SpawnHelixienVents"]/biomesWithExtraGeneration</xpath>
            <value>
		<biomesWithExtraGeneration>
			<li>Tundra</li>
			<li>IceSheet</li>
			<li>ColdBog</li>
			<li>BorealForest</li>
		</biomesWithExtraGeneration>
            </value>
        </li>

<!--================================================================================================================-->
				
        <li Class="PatchOperationReplace">
          <xpath>Defs/SpecialSpawnsDefs[defName="VPE_SpawnHelixienVents"]/biomesWithExtraGeneration</xpath>
            <value>
		<numberToSpawn>2~3</numberToSpawn>
            </value>
        </li>

<!--================================================================================================================-->
				
	<li Class="PatchOperationAdd">
          <xpath>Defs/SpecialSpawnsDefs[defName="VPE_SpawnHelixienVents"]</xpath>
            <value>
		<extraGeneration>1</extraGeneration>
            </value>
        </li>
				
<!--================================================================================================================-->
				
      </operations>
    </match>
  </Operation>
</Patch>
