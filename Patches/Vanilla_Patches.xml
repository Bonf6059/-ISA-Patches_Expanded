<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
<!--========== ANIMALS ==========-->

  <!-- Muffalo milk -->
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="Muffalo"]/comps</xpath>
    <value>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>3</milkIntervalDays>
        <milkAmount>32</milkAmount>
      </li>
    </value>
  </Operation>

<!--========== TRADERS ==========-->
  
  <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_EssentialsSupplier</li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_GrocerySupplier</li>
    </value>
  </Operation>
  
  <!--========== CONSTRUCTION MATERIALS FIXES ==========-->
  
  <!-- Metal don't burn -->
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="Steel" or defName="Plasteel" or defName="Silver" or defName="Gold"]/stuffProps/statFactors/Flammability</xpath>
    <value>
          <Flammability>0.0</Flammability>
    </value>
  </Operation>
      
  <!-- Power conduits burn slowly -->
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDef[defName="PowerConduit" or defName="PowerSwitch"]/statBases/Flammability</xpath>
    <value>
          <Flammability>0.015</Flammability>
    </value>
  </Operation>
  
<!--========== RECIPES ==========-->

  <!-- Recipe Glittertech medicine -->
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="MedicineUltratech"]</xpath>
    <value>
    <costList>
      <MedicineIndustrial>1</MedicineIndustrial>
      <Neutroamine>5</Neutroamine>
      <Silver>30</Silver>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>MedicineProduction</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
        <Intellectual>6</Intellectual>
      </skillRequirements>
    </recipeMaker>
    </value>
  </Operation>

  <!-- Add Neutroamine recipe to biofuel refinery -->
  
<Operation Class="PatchOperationAdd">
  <xpath>/Defs/ThingDef[defName="BiofuelRefinery"]/recipes</xpath>
  <value>
    <li>ISA_Make_NeutroamineFromChemfuel</li>
  </value>
</Operation>
  
</Patch>
