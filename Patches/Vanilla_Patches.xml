<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Muffalo milk -->
  
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDefs_Races[defName="Muffalo"]/comps</xpath>
    <value>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>3</milkIntervalDays>
        <milkAmount>32</milkAmount>
      </li>
    </value>
  </Operation>
<!--================================================================================================================-->

  <!-- Reusable trap -->
  
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ThingDefs_Buildings[defName="TrapSpike"]/building/trapDestroyOnSpring</xpath>
    <value>
      <trapDestroyOnSpring>false</trapDestroyOnSpring>
    </value>
  </Operation>

</Patch>
